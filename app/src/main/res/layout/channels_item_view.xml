<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:clickable="false">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivChannelsContactProfile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="11dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="11dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tvChannelsContactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45.5dp"
        android:layout_marginTop="23.5dp"
        android:layout_toEndOf="@id/ivChannelsContactProfile"
        android:layout_toRightOf="@id/ivChannelsContactProfile"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="-0.02"
        android:textColor="#4a4a4a"
        android:textSize="18sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tvChannelsContactLastMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@id/ivChannelsContactProfile"
        android:layout_toRightOf="@id/ivChannelsContactProfile"
        android:fontFamily="sans-serif"
        android:letterSpacing="-0.02"
        android:textColor="#797979"
        android:textSize="16sp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/ivChannelsArrow"
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginTop="41dp"
        android:src="@drawable/arrow" />

    <TextView
        android:id="@+id/tvChannelsTimeOfMessage"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="64dp"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"
        android:layout_marginTop="11dp" />

    <RelativeLayout
        android:id="@+id/rlChannelsCounter"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"
        android:layout_marginTop="49dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivChannelsContactCounter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:src="@drawable/circle_counter"/>
        <TextView
            android:id="@+id/tvChannelsContactCounterText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:letterSpacing="-0.02"
            android:gravity="center_horizontal"/>
    </RelativeLayout>


</RelativeLayout>